{
    "compilerOptions": {
        "target": "es6", // Target ECMAScript version
        "module": "commonjs", // Module system to use
        "lib": [
            "es6" // Include library files for ES6
        ],
        "allowJs": true, // Allow JavaScript files to be compiled
        "outDir": "dist", // Output directory for compiled files
        "rootDir": "src", // Root directory of your source files
        "strict": true, // Enable all strict type-checking options
        "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type
        "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
        "resolveJsonModule": true, // Include modules that can import JSON files
        "typeRoots": [
            "./node_modules/@types",
            "./src/types" // Ensure this is correct; custom types should be in src/types
        ]
    },
    "include": [
        "src/**/*", // Include all TypeScript files in the src directory
        "src/types/**/*.d.ts" // Ensure TypeScript includes your custom types
    ],
    "exclude": [
        "node_modules", // Exclude node_modules directory
        "**/*.spec.ts" // Exclude all test files with .spec.ts extension
    ]
}